{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Node: Nodemon",
      "processId": "${command:PickProcess}",
      "restart": true,
      "protocol": "inspector"
    },
    {
      "name": "Debug Jest",
      "type": "node",
      "request": "launch",
      "env": {
        "NODE_ENV": "test"
      },
      "runtimeArgs": [
        "--max_old_space_size=12240",
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--config",
        "${workspaceRoot}/test/jest-config.json",
        "--forceExit",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ]
}
